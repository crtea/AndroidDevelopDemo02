<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#A39E9E"
        android:text="0.0"
        android:textSize="30dp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/g"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="7"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grey"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/w"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="8"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/g"
        app:layout_constraintTop_toBottomOf="@id/grey"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/e"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="9"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/w"
        app:layout_constraintTop_toBottomOf="@id/grey"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="+"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/e"
        app:layout_constraintTop_toBottomOf="@id/grey"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="4"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/g"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/s"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="5"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/a"
        app:layout_constraintTop_toBottomOf="@id/w"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/d"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="6"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/s"
        app:layout_constraintTop_toBottomOf="@id/e"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/f"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="-"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/d"
        app:layout_constraintTop_toBottomOf="@id/r"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/z"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="1"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/x"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="2"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/z"
        app:layout_constraintTop_toBottomOf="@id/s"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/c"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="3"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/x"
        app:layout_constraintTop_toBottomOf="@id/d"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/v"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="*"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/c"
        app:layout_constraintTop_toBottomOf="@id/f"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/u"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="."
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/z"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/i"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/u"
        app:layout_constraintTop_toBottomOf="@id/x"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/o"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="="
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/i"
        app:layout_constraintTop_toBottomOf="@id/c"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/p"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="/"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/o"
        app:layout_constraintTop_toBottomOf="@id/v"
        android:background="#999898"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>